server {
	listen 127.0.0.1:8001; 
	server_name localhost;

	location / {
        root /data;
		index index.html index.htm;
		allow_methods GET POST;
		autoindex off;
		error_page 404 /errors/404.html;
    }

	location /api {
    	root /data/api;
		allow_methods GET POST DELETE;
		client_max_body_size 10M
		cgi .php /usr/bin/php-cgi;
    }

	location /uploads {
        upload_dir /data/uploads
		allow_methods GET POST DELET;
		autoindex on;
		error_page 404 /errors/404.html;
    }
}

server {
	listen 196.0.0.1:8001;
	server_name mysite;
	error_page 404 /errors/404.html;
	location / {
        root /www/html;
        index index.html index.htm;
		allow_methods GET;
    }

	location /uploads/ {
        root /www/html;
        index index.html index.htm;
		allow_methods GET;
    }
}

server {
	listen 8050;
	root /www/html;
	index index.html index.htm;
	error_page 404 /errors/404.html;

	location /uploads/ {
        root /www/files/;
		allow_methods GET;
    }
}