worker_processes 1;
client_max_body_size 10M;

# Основной сервер
server {
    listen 127.0.0.1:8080;
    server_name localhost;
    
    root /Users/asegerasimov/Documents/study_repo/web_serv/www/html;
    
    index index.html index.htm index.php;
    
    # Настройка для загрузки файлов
    location /uploads/ {
        autoindex on;
        client_max_body_size 5M;
        allowed_methods GET POST DELETE;
    }
    
    # Страницы ошибок
    error_page 400 /error/400.html;
    error_page 404 /error/404.html;
    error_page 405 /error/405.html;
    error_page 413 /error/413.html;
    error_page 500 /error/500.html;
    error_page 501 /error/501.html;
    error_page 505 /error/505.html;
}

# API сервер
server {
    listen 127.0.0.1:8080;
    server_name api.localhost;
    
    root /Users/asegerasimov/Documents/study_repo/web_serv/www/html/upi;
    index index.html index.htm index.php;
    
    location / {
        allowed_methods GET POST;
    }
    
    location /api/ {
        allowed_methods GET POST PUT DELETE;
    }
    
    location /redirect/ {
        return 301 /index.html;
    }
}

# Сервер для загрузки файлов
server {
    listen 127.0.0.1:8081;
    server_name upload.localhost;
    
    root /Users/asegerasimov/Documents/study_repo/web_serv/www/html/uploads;
    index index.php upload.html;
    
    client_max_body_size 20M;
    
    location / {
        allowed_methods GET POST DELETE;
        autoindex on;
    }
    
}